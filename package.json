{
  "name": "chrono-albums",
  "version": "0.1.0",
  "description": "Static site generator for chronologically sorted photo albums.",
  "keywords": [
    "photos",
    "static site generator"
  ],
  "homepage": "https://github.com/lttr/chrono-albums#readme",
  "bugs": {
    "url": "https://github.com/lttr/chrono-albums/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lttr/chrono-albums.git"
  },
  "license": "MIT",
  "author": "Lukas Trumm",
  "main": "src/index.js",
  "scripts": {
    "build": "pika build",
    "format": "prettier --write '**/*.{ts,json,md,yml,js}'",
    "lint": "eslint src/ tests/",
    "prepare": "pika install",
    "serve": "browser-sync start --server dist --files dist --no-notify --open dist",
    "test": "ava",
    "test-coverage": "cross-env NODE_ENV=test nyc ava",
    "update-snapshots": "ava --update-snapshots",
    "validate": "run-p -l lint test build",
    "watch": "ava --watch"
  },
  "dependencies": {
    "date-fns": "^2.8.1",
    "googleapis": "^45.0.0",
    "hyperhtml": "^2.31.5",
    "image-size": "^0.8.3",
    "jpeg-exif": "^1.1.4",
    "merge-options": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/register": "^7.7.0",
    "@istanbuljs/nyc-config-babel": "^2.1.1",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.7.1",
    "@pika/plugin-build-web": "^0.7.1",
    "@pika/plugin-standard-pkg": "^0.7.1",
    "@pika/web": "^0.6.1",
    "ava": "*",
    "babel-plugin-istanbul": "^5.2.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "prettier-plugin-packagejson": "^2.0.2"
  },
  "engines": {
    "node": ">=12"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "tests/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  }
}
