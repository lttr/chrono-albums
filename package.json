{
  "name": "chrono-albums",
  "version": "1.0.0",
  "description": "Static site generator for chronologically sorted photo albums.",
  "main": "index.js",
  "scripts": {
    "resize": "node resizer.js",
    "album": "node album.js",
    "structure": "node structure.js",
    "css": "cp style.css dist/style.css",
    "js": "cp script.js dist/script.js",
    "build": "run-s -l structure album resize css js",
    "serve": "browser-sync start --server --files dist --no-notify --open dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lttr/chrono-albums.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lttr/chrono-albums/issues"
  },
  "homepage": "https://github.com/lttr/chrono-albums#readme",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "image-size": "^0.8.1",
    "npm-run-all": "^4.1.5",
    "sharp": "^0.23.0",
    "viperhtml": "^2.17.0"
  }
}
